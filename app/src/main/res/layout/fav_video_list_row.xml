<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fav_video_list_root"
    android:background="#2B2A2A"
    >

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="@dimen/paddingTop"
        android:layout_marginEnd="@dimen/paddingTop"
        android:id="@+id/fav_video_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fav_video_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/paddingTop"
        android:text="@string/app_name"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/fav_video_list_title"
        android:paddingBottom="4dp"
        android:paddingTop="2dp"
        android:textSize="14sp" />


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>
